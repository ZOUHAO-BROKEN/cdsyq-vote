<style type="less">
page{
width: 100%;
height: 100%;

}

.body{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
}

.background{
  width: 100%;
  height: 100%;
  position:absolute;
  left:0px;
  top:0px;
  z-index:-1
}

.inputArea{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
}

.inputStyle{
	width:80%;
	height:40px; 
	border:1px solid #C7C6C6;
	border-radius:4px;
}

.loginArea{
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
}

</style>

<template>

<img class="background" mode="aspectFill" src="{{bgurl}}"/>
<div class="body">
<view class="inputArea">
<!--<input style="width:100%; height:60px; background:#F5F5F5;" type="number" placeholder="请输入单位通讯录留存手机号码" bindinput="bindTelno" focus="{{telInputFocus}}" />-->

<input type="digit" class="inputStyle" placeholder="请输入单位通讯录留存手机号码" bindinput="bindTelno" focus="{{telInputFocus}}"/>

</view>

<view class="loginArea">
<button style="width:80%;  background-color:#0E8DFD;" type="primary" size="default" open-type="getUserInfo" bindgetuserinfo="setUserInfo" disabled="{{btnDisable}}">{{btnLable}}</button>


</view>
</div>
</template>
<script>
import wepy from "@wepy/core"

var zhtool = require('../common/zhtool.js')
var utilmd5 = require('../common/md5.js')

wepy.page({
	data: {
		bgurl: '../img/loginBg.jpg',
		appId: 'wx2f57cbeea4374512',
		telno: '',
		userInfo: '',
		btnDisable: true,
		btnLable: '登陆',
		openId: '',
		nickName: '',
		signIn: false,
		telInputFocus: false
	},
	methods: {
		setUserInfo(res){			

			if(res.$wx.detail.errMsg != "getUserInfo:fail auth deny"){
				this.telInputFocus = true;
				this.getOpenId(this.register);
			}else{

			wx.showLoading({
  				title: '正在登陆',
			});

			}

		},
		register(openId,telno,self){

			wx.showLoading({
  				title: '正在登陆',
			});

			let registUrl = 'https://ccbynt.cn/khxxurl/web/api/user/register?openId='+openId+'&phone='+telno;

			console.log(registUrl);

			zhtool.httpsRequest(registUrl).then(res => {

				//signIn success
				if(res.data.responseData.userStatus == '1'){
					
					
					wx.redirectTo({
						url: 'voteEntrance?userId='+res.data.responseData.userId
					});
					wx.hideLoading();

				//signIn fail
				}else{
					wx.hideLoading();

					wx.showModal({
			            title: '电话号码错误',
			            showCancel: false,
			            content: '请输入单位通讯录留存手机号码',
			            success (res) {
			              if (res.confirm) {
			                
			              }
			            }
			         })
				}
				console.log(res);
			}).catch(res => {
				console.log(res);

				wx.hideLoading();
				wx.showModal({
			        title: '服务异常',
			        showCancel: false,
			        content: '登陆服务异常，请重试',
			        success (res) {
			              if (res.confirm) {
			                
			              }
			        }
			   	})
			});

		},
		bindTelno(e){
			this.telno = e.$wx.detail.value;
			this.btnDisable = false;
		},
		login(){
			
		},
		checkRegist(openId,telno, self){

			//self = this;

			let checkUserUrl = 'https://ccbynt.cn/khxxurl/web/api/user/checkUser?openId='+openId;

			console.log("openId:" + openId);

			zhtool.httpsRequest(checkUserUrl).then(res => {
					//console.log(res);				

					wx.hideLoading();

					wx.showLoading({
  						title: '登陆中',
					});

					//already signIn
					if(res.data.responseData.userStatus == '1'){
						wx.redirectTo({
							url: 'voteEntrance?userId='+res.data.responseData.userId
						});
						self.signIn = true;
						console.log('checkUser call result: user already signIn')
					}else{
						//wx.hideLoading();
						self.signIn = false;
						console.log('checkUser call result: user not signIn')
					}

					//wx.hideLoading();
					
				}).catch(res => {

						console.log(res);
						self.signIn = false;
						wx.hideLoading();
						console.log('checkUser call result: call failed')

				});

		},
		getOpenId(callbackfunc){


			self = this;
			//TODO request openId
			console.log('getOpenId function');
			wx.getUserInfo({
	         success: function(res) {
	         	console.log('get userInfo success');

	         	//console.log(res);
	         	self.userInfo = res.userInfo;
	          	//console.log(res.userInfo)
	          	//console.log(utilmd5.hexMD5(res.userInfo.avatarUrl));
	          	//self.openId = self.userInfo.nickName;
	          	self.openId = utilmd5.hexMD5(res.userInfo.avatarUrl);
	          	self.nickName = self.userInfo.nickName;

	          	//self.checkRegist();
	          	if(self.openId == ""){
	          		return;
	          	}

	          	if(callbackfunc){
	          		callbackfunc(self.openId, self.telno, self);
	          	}
	          	

	          	//wx.hideLoading();

	        	},
	         fail: function(e){
	         	console.log('get userInfo error');
	         	console.log(e);
	         	wx.hideLoading();
	         }
	    	})
		}
	},

	created(){

		wx.showLoading({
  				title: '加载中',
		})

		self = this;

		this.getOpenId(this.checkRegist);

    }
})

		</script>